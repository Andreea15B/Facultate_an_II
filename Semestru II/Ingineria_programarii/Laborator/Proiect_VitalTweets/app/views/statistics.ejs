    <header class="logo-section">
        <!-- <img src="../resources/images/logoalb.png" alt="javascript:void(0)" class="logo"> -->
    </header>

    <div class="bigtitle container">STATISTICS</div>
    <nav class="container">
        <form class="statistics-form">
            <div class="form-input">
                <div class="label">Country</div>
                <select style="height:40px; width:100%;margin-top:11px;" name="country" id="country-select" required>
                    <option value="" disabled selected>Select Country</option>
                    <option name="default" value="All">All</option>
                    <% countries.forEach(function(country) { %>
                        <option name="<%= country %>" value="<%= country %>"><%= country %></option>
                    <% }); %>
                </select>
            </div>
            <div id="disease" class="form-input" style="display: none;">
                <div class="label">Disease</div>
                <select style="height:40px; width:100%;margin-top:11px;" name="disease" id="diseases-select" required>
                    <option value="" disabled selected>Select Disease</option>                    
                    <option value="All" name="All">All</option>
                </select>
            </div>

            <div class="form-input" id="timestamp" style="display:none">
                <div class="label">Timestamp </div>
                <select style="height:40px; width:100%;margin-top:11px;" name="timestamp" id="evolution" required>
                    <option value="" disabled selected>Select Timestamp</option>                    
                    <option value="A week ago">A week ago</option>
                    <option value="A month ago">A month ago</option>
                    <option value="Three months ago">Three months ago</option>
                    <option value="Six months ago">Six months ago</option>
                </select>
            </div>

            <div class="form-button" style="display:none">
                <div class="submit-button" style="width:100%; margin-top:15px;">
                    <input id="create-stat" type="submit" value="Generate Statistics" style=" width:100%;height:40px;color:white;background-color: #4f618a;  margin-top:10px;" >
                </div>
            </div>

            <div id="reset-canvas" style="display: none;font-size:20px; height:40px; margin-top:35px;">
                <a href="/statistics">
                <i class="fas fa-redo"></i>
            </a>
            </div>
        </form>
    </nav>
    
    <main id="main-display" class="main-section container" style="margin-top:50px">
    <canvas id="ChartPie" width="800" height="450"></canvas>
    </main>
    
